    "version": "0.2.0",
    "configurations": [
        {
            "name": "Consumer .NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/NetCoreKafka.Consumer.Handler/bin/Debug/netcoreapp3.1/Kafka.Consumer.Handler.dll",
            "args": [],
            "cwd": "${workspaceFolder}/NetCoreKafka.Consumer.Handler",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Producer .NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/NetCoreKafka.Producer.API/bin/Debug/netcoreapp3.1/Kafka.Producer.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/NetCoreKafka.Producer.API",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
        ,
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}